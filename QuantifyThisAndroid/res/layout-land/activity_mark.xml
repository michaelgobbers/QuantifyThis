<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mark_landscape_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkActivity">

    <fragment
        android:name="be.mume.quantifythis.fragments.MarkMoodFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/fragment_mark"
        android:layout_weight="1" />

    <fragment
        android:name="be.mume.quantifythis.fragments.HeartRateFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/fragment_heart"
        android:layout_weight="1" />

    <fragment
        android:name="be.mume.quantifythis.fragments.SleepFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/fragment_sleep"
        android:layout_weight="1" />
    
</LinearLayout>
 